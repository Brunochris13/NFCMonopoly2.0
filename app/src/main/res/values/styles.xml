<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="game_fragment_btn">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="game_fragment_btn.primary">
        <item name="android:backgroundTint">@color/game_button_bg_color_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/game_button_bg_color_secondary</item>
    </style>

    <style name="game_fragment_btn.secondary">
        <item name="android:backgroundTint">@color/game_button_bg_color_secondary</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/game_button_bg_color_primary</item>
    </style>

    <style name="bank_and_free_parking_buttons">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">-1dp</item>
    </style>

    <style name="property_cardview">
        <item name="android:foreground">@drawable/property_border</item>
    </style>

    <style name="property_layout">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">400dp</item>
    </style>

    <style name="property_title">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="property_details">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_width">110dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>